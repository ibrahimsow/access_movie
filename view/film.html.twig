{% extends 'index.html.twig' %} 



{% block content %}

    {% for film in films%}
   
    <div class="container-fluid d-flex flex-column"> 
        <div class="image col-12" style="background: url({{film.image_film}}); background-size: cover;
                background-position: top;
                height: 400px; margin:0;">
            </div>
        <section class="contenu col-12">
            <div>
                <h2>{{film.titre}}</h2>
            </div>
            <div>
                <p>Date de sortie : {{film.annee}}</p>
            </div>
            <div>
                <p>
                De : {{film.realisateur}}
                </p>
            </div>
            <div>
                <p>Avec : {{film.acteur}}</p></a>
            
            </div>
            <div>
                <p>Genre : {{film.genre}}
                </p>
            </div>
            <div>
                <p>Synopsis : {{film.description}}</p>
            </div>
            <div>
                <p class="showBandeAnnonce">Voir la bande annonce</p>
                <p class="hideBandeAnnonce">Cacher la bande annonce</p>
            </div> 

        </section>
    </div>
       <div class="container-fluid bande_annonce">
        <iframe width="560" height="315" src="{{film.bande_annonce}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

    {% endfor %}
  

{%  endblock %}

{% block menugenre %}
            <section class="container-fluid justify-content-center affichage_genre row" >
                {% for genre in genres %}
                <a href="films/genre/{{genre.id}}">{{genre.type}}</a>
                {% endfor %}

            </section>
{%  endblock %}
  